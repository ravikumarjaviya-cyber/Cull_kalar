<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Block Blast Final</title>
    <style>
        body { background-color: #5c8fb3; font-family: sans-serif; text-align: center; margin: 0; overflow: hidden; touch-action: none; }
        .score { font-size: 50px; color: white; margin: 20px; font-weight: bold; }
        #grid { 
            display: grid; grid-template-columns: repeat(8, 40px); grid-template-rows: repeat(8, 40px);
            gap: 2px; background-color: #334a5a; padding: 10px; border-radius: 8px;
            margin: 20px auto; width: fit-content; border: 5px solid #223344;
        }
        .cell { width: 40px; height: 40px; background-color: #435a6b; border-radius: 4px; transition: 0.1s; }
        .filled { background-color: #d4af37; border: 1px solid #f1c40f; box-shadow: inset 0 0 10px rgba(0,0,0,0.5); }
    </style>
</head>
<body>
    <div class="score" id="score">0</div>
    <div id="grid"></div>
    <p style="color: white; font-weight: bold;">पूरी लाइन भरकर गायब करें!</p>
    <script>
        const grid = document.getElementById('grid');
        const scoreDisplay = document.getElementById('score');
        let score = 0;
        const cells = [];

        for (let i = 0; i < 64; i++) {
            const cell = document.createElement('div');
            cell.className = 'cell';
            cell.onclick = () => {
                if (!cell.classList.contains('filled')) {
                    cell.classList.add('filled');
                    score += 10;
                    checkLines();
                } else {
                    cell.classList.remove('filled');
                    score -= 5;
                }
                scoreDisplay.innerText = score;
            };
            grid.appendChild(cell);
            cells.push(cell);
        }

        function checkLines() {
            // Horizontal line check
            for (let i = 0; i < 8; i++) {
                let row = cells.slice(i * 8, i * 8 + 8);
                if (row.every(c => c.classList.contains('filled'))) {
                    row.forEach(c => c.classList.remove('filled'));
                    score += 100;
                }
            }
            // Vertical line check
            for (let i = 0; i < 8; i++) {
                let col = [];
                for (let j = 0; j < 8; j++) col.push(cells[i + j * 8]);
                if (col.every(c => c.classList.contains('filled'))) {
                    col.forEach(c => c.classList.remove('filled'));
                    score += 100;
                }
            }
        }
    </script>
</body>
</html>
